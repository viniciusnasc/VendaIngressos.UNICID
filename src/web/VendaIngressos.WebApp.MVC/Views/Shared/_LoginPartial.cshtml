@using VendaIngressos.WebApp.MVC.Extensions
@inject IUser AppUser

<ul class="navbar-nav">
    @if (AppUser.EstaAutenticado())
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Olá @AppUser.ObterUserEmail()</a>
        </li>
        <li class="nav item">
            <a class="nav-link text-dark" asp-area="Identidade" asp-controller="Identidade" asp-action="Logout">Sair</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Produto" asp-controller="ShowHouse" asp-action="Index">ShowHouse</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Produto" asp-controller="Organizador" asp-action="Index">Organizadores</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Produto" asp-controller="Produto" asp-action="Lista">Atracoes</a>
        </li>
    }
    else
    {
        <li class="nav-item" style="padding-right: 30px;">
            <a class="btn btn-success" asp-area="Identidade" asp-controller="Identidade" asp-action="Registro">Crie sua conta</a>
        </li>
        <li class="nav item">
            <a class="btn btn-primary" asp-area="Identidade" asp-controller="Identidade" asp-action="Login">Login</a>
        </li>
    }
</ul>