@model List<VendaIngressos.WebApp.MVC.Areas.Produto.Models.OrganizadorResult>

@{
    ViewData["Title"] = "Organizadores";
}

@if (Model.Count == 0)
{
    <h1>Não há organizadores ainda :(</h1>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                Nome
                </th>
                <th>
                Email
                </th>
                <th>
                Telefone
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {<tr>
                <td>
                    @item.Nome
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Telefone
                </td>
                </tr>
            }
        </tbody>
    </table>
}