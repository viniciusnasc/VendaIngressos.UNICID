@model List<VendaIngressos.WebApp.MVC.Areas.Produto.Models.AtracaoViewModel>

@{
    ViewData["Title"] = "Página inicial";
}

@if (Model.Count == 0)
{
    <h1>Lista Vazia!!!!</h1>
}
else
{
    <form>
    <div class="container row">
        @foreach (var product in Model)
        {
            <div class="col-4">
                <div class="p-0 my-3 border">
                    <div class="card">
                        <img src="~/imagens/@product.Poster" class="card-img-top">
                        <div class ="card-body">
                            <h3 class="card-title text-success">@product.NomeDiminuido()</h3>
                            <span class="badge badge-light mb-2">@product.NomeDiminuido()</span>
                            <p class="card-text">@product.Descricao</p> 
                            <div class="row">
                                <div class="col pt-1">
                                    <span style="font-size:23px;">@string.Format("{0:c}", product.Valor)</span>
                                </div>
                                <div class="col">
                                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-success form-control">Details</a>
                                </div>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        }
    </div>
</form>
}