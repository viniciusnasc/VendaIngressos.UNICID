@model List<VendaIngressos.WebApp.MVC.Areas.Produto.Models.AtracaoModel>

@{
    ViewData["Title"] = "Página inicial";
}

@if (Model.Count == 0)
{
    <h1>Lista Vazia!!!!</h1>
}
else
{
    @for (int i = 0; i < Model.Count; i = i + 4)
    {
        <div class="row">
            <div class="col-3">
                <img src="@Model[i].Poster" style="width: 70px; height:100px" />
                <b>@Model[i].Nome</b>
            </div>

            @if (i + 1 < Model.Count)
            {
                <div class="col-3">
                    <img src="@Model[i+1].Poster" style="width: 70px; height:100px" />
                    <b>@Model[i+1].Nome</b>
                </div>
            }
            @if (i + 2 < Model.Count)
            {
                <div class="col-3">
                    <img src="@Model[i+2].Poster" style="width: 70px; height:100px" />
                    <b>@Model[i+2].Nome</b>
                </div>
            }
            @if (i + 3 < Model.Count)
            {
                <div class="col-3">
                    <img src="@Model[i+2].Poster" style="width: 70px; height:100px" />
                    <b>@Model[i+3].Nome</b>
                </div>
            }
        </div>
    }
}